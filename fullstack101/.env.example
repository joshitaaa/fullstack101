
# When adding additional environment variables, the schema in "/src/env.js"
# should be updated accordingly.

# Better Auth (app)
BETTER_AUTH_SECRET="your-better-auth-secret-here"
BETTER_AUTH_URL="http://localhost:3001"
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3001"

# Paypal sandbox details (app)
PAYPAL_CLIENT_ID="your-paypal-client-id-here"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret-here"
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your-paypal-client-id-here"

# Postgres DB (app)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=starter-template
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432

# DB connection string (app)
# Window host: host.docker.internal
# Linux host: 172.17.0.1
DATABASE_URL="postgresql://postgres:root@host.docker.internal:5432/starter_template"

# MCP Context7 API Key (opencode)
CONTEXT7_API_KEY="your-context7-api-key-here"

# CSRF Protection
ENFORCE_CSRF_TOKENS=true

# Node environment
NODE_ENV=production

# Port
API_PORT=4000

# Gitea configuration for pushing generated code
# GITEA_HOST: The hostname/IP to access Gitea
#   - Use 'gitea' when running in docker-compose with Gitea service
#   - Use 'host.docker.internal' when Gitea is on host machine
#   - Use 'localhost' when running outside Docker
# GITEA_TOKEN: Personal access token from Gitea (optional)
#   - Leave empty to use git:git as fallback for local dev
GITEA_HOST=gitea
GITEA_TOKEN=
